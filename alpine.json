{
  "variables": {
    "name": "alpine-clean",
    "version": "3.19.0",
    "out_dir": ".packer/bin",
    "cpus": "1",
    "disk_size": "2048",
    "memory": "512",
    "headless": "false",
    "iso_file": "https://nl.alpinelinux.org/alpine/v3.19/releases/x86_64/alpine-virt-3.19.0_rc4-x86_64.iso",
    "iso_checksum": "0af229fcc89c259cb4ba80cd31ddf278bd6795e68433848e1aad943312727f09",
    "shutdown_command": "poweroff",
    "ssh_password": "alpine",
    "ssh_wait_timeout": "90s"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "{{ user `name`}}-{{user `version`}}",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux26_64",
      "http_directory": "http",
      "output_directory" : "{{user `out_dir`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "boot_wait": "30s",
      "boot_command": [
        "root<enter><wait>",
        "setup-alpine -c answers<enter><wait>",
        "setup-alpine -f answers<enter><wait>",
        "<wait5><wait5>",
        "alpine<enter><wait>",
        "alpine<enter><wait>",
        "<wait5><wait5><wait5>",
        "setup-disk -v -m sys<enter><wait>",
        "sda<enter><wait>",
        "<wait5><wait5><wait5>",
        "y<enter><wait>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "rc-service sshd stop<enter><wait>",
        "mount /dev/sda3 /mnt<enter><wait>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter><wait>",
        "umount /mnt<enter><wait>",
        "reboot<enter>"
      ],
      "headless": "{{user `headless`}}",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_file`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_username": "root",
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "cpus":"{{user `cpus`}}",
      "memory":"{{user `memory`}}"
    }
  ],
  "provisioners": [],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `out_dir`}}/{{ .Name }}.box",
      "keep_input_artifact": true
    }
  ]
}