{
  "variables": {
    "name": "alpine-clean",
    "version": "3.6.1",
    "cpus": "1",
    "disk_size": "2048",
    "memory": "512",
    "headless": "false",
    "iso_checksum2": "f4421357ed2c969046b95cef6fc4844aeebfe8a2323049915dbe953d5f1d3c36",
    "iso_checksum": "0af229fcc89c259cb4ba80cd31ddf278bd6795e68433848e1aad943312727f09",
    "iso_file": "https://nl.alpinelinux.org/alpine/v3.19/releases/x86_64/alpine-virt-3.19.0_rc4-x86_64.iso",
    "iso_file2": "https://nl.alpinelinux.org/alpine/v3.6/releases/x86_64/alpine-virt-3.6.1-x86_64.iso",
    "out_dir": "output-box",
    "shutdown_command": "poweroff",
    "ssh_password": "alpine",
    "ssh_wait_timeout": "90s"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "{{ user `name`}}-{{user `version`}}",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux26_64",
      "http_directory": "http",
      "shutdown_command": "{{user `shutdown_command`}}",
      "boot_wait": "30s",
      "boot_command": [
        "<wait10>",
        "root<enter><wait>",
        "ifconfig eth0 up \u0026\u0026 udhcpc -i eth0<enter><wait5>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/answers<enter><wait>",
        "setup-alpine -f $PWD/answers<enter>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "alpine<enter><wait>",
        "alpine<enter><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "y<enter>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "rc-service sshd stop<enter>",
        "mount /dev/sda3 /mnt<enter>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
        "umount /mnt<enter>",
        "reboot<enter>"
      ],
      "headless": "{{user `headless`}}",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_file`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_username": "root",
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ]
    }
  ],
  "provisioners": [],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `out_dir`}}/{{user `name`}}-{{user `version`}}.box",
      "keep_input_artifact": true
    }
  ]
}